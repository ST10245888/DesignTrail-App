{
  "rules": {
    "Users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "Chats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "Inventory": {
      "$itemId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
