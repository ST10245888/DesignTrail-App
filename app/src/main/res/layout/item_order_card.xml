<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Order Summary (Clickable) -->
        <LinearLayout
            android:id="@+id/orderSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order #001"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Cards - 500 units"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Pending"
                android:textSize="12sp"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: Oct 21, 2025"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvExpandHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to expand"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Order Details (Hidden by default) -->
        <LinearLayout
            android:id="@+id/orderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvDetailCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company: ABC Corp"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: contact@abc.com"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: 0123456789"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: 123 Main St"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDetailTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: R2,500.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvDetailItemsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items:\n1. Business Cards x 500"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- Action Buttons -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actions"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnViewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View"
                    android:textSize="12sp"
                    android:drawableTop="@android:drawable/ic_menu_view"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnDownloadOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Download"
                    android:textSize="12sp"
                    android:drawableTop="@android:drawable/stat_sys_download"
                    android:drawablePadding="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnSendOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send"
                    android:textSize="12sp"
                    android:drawableTop="@android:drawable/ic_menu_send"
                    android:drawablePadding="4dp"
                    android:layout_marginStart="4dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>