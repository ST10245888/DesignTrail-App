<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Company Logo and Name -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FKJ CONSULTANTS"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Consultants Pty Ltd"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <!-- Quotation Title -->
            <TextView
                android:id="@+id/quotationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUOTATIONS"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <!-- Products Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRODUCTS"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="#E0E0E0"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Product Table -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Headers -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView style="@style/TableHeader" android:text="Product ID"/>
                        <TextView style="@style/TableHeader" android:text="Product Name"/>
                        <TextView style="@style/TableHeader" android:text="Description"/>
                        <TextView style="@style/TableHeader" android:text="Color"/>
                        <TextView style="@style/TableHeader" android:text="Price"/>
                        <TextView style="@style/TableHeader" android:text="Quantity"/>
                        <TextView style="@style/TableHeader" android:text="Branding Type"/>
                        <TextView style="@style/TableHeader" android:text="Image"/>
                    </LinearLayout>

                    <!-- Sample Data -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView style="@style/TableRowText" android:text="123"/>
                        <TextView style="@style/TableRowText" android:text="Sample Product"/>
                        <TextView style="@style/TableRowText" android:text="High quality"/>
                        <TextView style="@style/TableRowText" android:text="Blue"/>
                        <TextView style="@style/TableRowText" android:text="R 250"/>
                        <TextView style="@style/TableRowText" android:text="10"/>
                        <TextView style="@style/TableRowText" android:text="Printed"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Product Image"
                            android:src="@drawable/ic_add"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Requester Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETAILS"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="12dp">

                <!-- Form Rows -->
                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Company:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Requestee Name:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Email:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Tel:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Address:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Bill To:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Total:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>

                <LinearLayout style="@style/FormRow">
                    <TextView style="@style/FormLabel" android:text="Status:"/>
                    <EditText style="@style/FormInput"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:textColor="@android:color/white"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00AFC8"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:src="@drawable/ic_home"/>
        <ImageView android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:src="@drawable/ic_catalog"/>
        <ImageView android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:src="@drawable/ic_dashboard"/>
        <ImageView android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:src="@drawable/ic_messaging"/>
        <ImageView android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:src="@drawable/ic_user"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
