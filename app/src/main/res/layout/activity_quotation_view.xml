<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="12dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <!--  Title  -->
        <TextView android:text="QUOTATION DETAILS" android:textStyle="bold" android:textSize="24sp" android:textColor="@android:color/holo_blue_dark" android:layout_gravity="center" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <!--  PRODUCTS Section  -->
        <TextView android:text="PRODUCTS" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerViewProducts" android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginBottom="16dp"/>
        <!--  DETAILS Section  -->
        <TextView android:text="DETAILS" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etCompanyName" android:hint="Company" android:enabled="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etRequesterName" android:hint="Requester Name" android:enabled="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etEmail" android:hint="Email" android:enabled="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress"/>
        <EditText android:id="@+id/etTel" android:hint="Tel" android:enabled="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone"/>
        <EditText android:id="@+id/etAddress" android:hint="Address" android:enabled="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etBillTo" android:hint="Bill To" android:enabled="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvTotal" android:layout_marginTop="12dp" android:text="Total: R 0.00" android:textStyle="bold" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvStatus" android:text="Status: Pending" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <!--  Buttons  -->
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:weightSum="2">
            <Button android:id="@+id/btnApprove" android:text="Approve" android:backgroundTint="#2ecc71" android:textColor="#FFF" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_width="0dp" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnReject" android:text="Reject" android:backgroundTint="#e74c3c" android:textColor="#FFF" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>