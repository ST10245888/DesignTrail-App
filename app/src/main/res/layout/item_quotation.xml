<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/primary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name_placeholder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/txtFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/file_name_placeholder"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Right Content - Status & Timestamp -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_pending"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_status_pending"
                    android:textColor="@color/white"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/txtTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timestamp_placeholder"
                    android:textSize="11sp"
                    android:textColor="@color/textHint"
                    android:maxLines="1"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Service Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_type"
                    android:textSize="11sp"
                    android:textColor="@color/textHint"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/txtServiceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_type_placeholder"
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Total Amount -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_label"
                    android:textSize="11sp"
                    android:textColor="@color/textHint"
                    android:layout_marginBottom="2px" />

                <TextView
                    android:id="@+id/txtSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center_vertical">

            <!-- View Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/action_view"
                android:textSize="10sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="4dp"
                android:backgroundTint="@color/buttonPrimary"
                android:textColor="@color/white"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_visibility"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button"
                android:layout_marginEnd="2dp" />

            <!-- Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/action_download"
                android:textSize="10sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="4dp"
                android:backgroundTint="@color/blue_500"
                android:textColor="@color/white"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_download"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button"
                android:layout_marginHorizontal="2dp" />

            <!-- Send Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/action_send"
                android:textSize="10sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="4dp"
                android:backgroundTint="@color/accentColor"
                android:textColor="@color/white"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button"
                android:layout_marginHorizontal="2dp" />

            <!-- Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/action_details"
                android:textSize="10sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="4dp"
                android:backgroundTint="@color/blue_100"
                android:textColor="@color/textPrimary"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_info"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginStart="2dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>