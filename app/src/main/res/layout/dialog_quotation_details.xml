<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header with Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_placeholder"
            android:contentDescription="FKJ Logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FKJ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONSULTANTS"
                android:textSize="12sp"
                android:textColor="@color/teal_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultants Pty Ltd"
                android:textSize="10sp"
                android:textColor="@color/teal_700" />
        </LinearLayout>
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUOTATION"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENERATOR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Product List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRODUCT LIST"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- ScrollView for Products -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/productsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="16dp" />

    <!-- Contact Details Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT DETAILS"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtCompanyName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Company Name"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_background"
        android:paddingHorizontal="12dp"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <!-- Email and Phone Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Tel"
            android:inputType="phone"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Address Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPANY ADDRESS"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Full Address"
        android:inputType="textPostalAddress|textMultiLine"
        android:background="@drawable/edit_text_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textSize="12sp"
        android:gravity="top"
        android:layout_marginBottom="8dp" />

    <!-- Bill To Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BILL TO"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtBillTo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Bill To (optional)"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_background"
        android:paddingHorizontal="12dp"
        android:textSize="12sp"
        android:layout_marginBottom="16dp" />

    <!-- Generate Button -->

    <!-- Bottom Navigation -->

</LinearLayout>