<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Header Banner with Logo and Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <!-- Header Top Row with Logo and Notification Bell -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- FKJ Logo and Branding (Left) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_fkj_logo"
                    android:contentDescription="FKJ Logo"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FKJ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#00BCD4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONSULTANTS"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#00BCD4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FKJ Consultants Pty Ltd"
                        android:textSize="10sp"
                        android:textColor="#00BCD4" />

                </LinearLayout>
            </LinearLayout>

            <!-- Notification Bell (Right) -->
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/notificationBell"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_notification_bell"
                    android:contentDescription="Notifications"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    app:tint="#00BCD4" />

                <!-- Notification Badge -->
                <TextView
                    android:id="@+id/notificationBadge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/notification_badge_bg"
                    android:layout_gravity="top|end"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- USER DASHBOARD Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER DASHBOARD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B2C4A" />

    </LinearLayout>

    <!-- Scroll Content -->
    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/headerLayout"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:spacing="20dp">

            <!-- Messaging Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#999999"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/btnMessaging"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Messaging"
                    android:drawableTop="@drawable/ic_messaging"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <!-- My Quotations Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#999999"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/btnQuotations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="My Quotations"
                    android:drawableTop="@drawable/ic_quotation"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <!-- Catalog Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#999999"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/btnCatalog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Catalog"
                    android:drawableTop="@drawable/ic_catalog"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <!-- Logout Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#D32F2F"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:drawableTop="@drawable/ic_logout"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#1A3A52"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_menu" />

</RelativeLayout>