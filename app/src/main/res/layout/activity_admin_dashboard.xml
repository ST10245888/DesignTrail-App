<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="23dp"
        android:layout_above="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvWelcomeAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="40dp"
                android:text="Welcome to the Admin Dashboard!"
                android:textColor="#30B4D1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnUserQuotations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#B2DAE6"
                android:padding="16dp"
                android:text="User Quotations"
                android:textColor="#161616" />

            <Button
                android:id="@+id/btnInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#B2DAE6"
                android:padding="16dp"
                android:text="Inventory"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnMessaging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B2DAE6"
                android:padding="15dp"
                android:text="Messaging"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#30B4D1"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>
