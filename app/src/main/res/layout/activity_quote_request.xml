<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Company Logo and Name -->
        <LinearLayout
            android:layout_width="239dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCompanyLogo"
                android:layout_width="55dp"
                android:layout_height="57dp"
                android:contentDescription="FKJ Logo"
                android:src="@drawable/ic_fkj_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FKJ"
                    android:textColor="#00BCD4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONSULTANTS"
                    android:textColor="#00BCD4"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FKJ Consultants Pty Ltd"
                    android:textColor="#666666"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRANDING"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- ScrollView Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Service Title -->
            <TextView
                android:id="@+id/txtServiceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quote Request"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Company Details -->
            <EditText
                android:id="@+id/edtCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtBillTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bill To"
                android:layout_marginBottom="12dp" />

            <!-- Quantity -->
            <EditText
                android:id="@+id/edtQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Quantity"
                android:inputType="number"
                android:layout_marginBottom="12dp" />

            <!-- Colors Dropdown -->
            <Spinner
                android:id="@+id/spinnerColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Notes -->
            <EditText
                android:id="@+id/edtNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Additional Notes"
                android:layout_marginBottom="12dp"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- File Upload -->
            <Button
                android:id="@+id/btnUploadDesign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Design/Logo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#020C47"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtFileSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textSize="14sp"
                android:paddingBottom="16dp" />

            <!-- Submit -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Quote Request"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue_500"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>
    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#1A3A52"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_menu" />

</RelativeLayout>